{% liquid  
  assign current_variant = product.selected_or_first_available_variant
%}

<form
  action="/cart/add"
  method="post"
  enctype="multipart/form-data"
  id="AddToCartForm"
  class="{% if ajax == true %}__add-to-cart-ajax{% endif %}">
  <div class="__group-2-cols">

    <div class="__product-variant-select">
      <select name="id" id="productSelect">
        {% for variant in product.variants %}
          {% if variant.available %}
            <option value="{{ variant.id }}" data-price="{{ variant.price | money }}">
              {{ variant.title }} - {{ variant.price | money_with_currency }}
            </option>
          {% else %}
            <option
              value="{{ variant.id }}"
              disabled="disabled"
              data-price="{{ variant.price | money }}">
              {{ variant.title }} - sold out
            </option>
          {% endif %}
        {% endfor %}
      </select>
    </div>

    <div class="__product-qty">
      <span class="__qty-update __qty-decrease">
        <svg
          width="29"
          height="4"
          viewBox="0 0 29 4"
          fill="none"
          xmlns="http://www.w3.org/2000/svg">
          <path
            d="M2.4668 2H26.0918"
            stroke="white"
            stroke-width="4"
            stroke-linecap="round"
            stroke-linejoin="round" />
        </svg>
      </span>
      <input
        type="number"
        id="Quantity"
        name="quantity"
        value="1"
        min="1"
        autocomplete="off" />
      <span class="__qty-update __qty-increase">
        <svg
          width="42"
          height="42"
          viewBox="0 0 42 42"
          fill="none"
          xmlns="http://www.w3.org/2000/svg">
          <path
            d="M21 9.1875V32.8125"
            stroke="white"
            stroke-width="4"
            stroke-linecap="round"
            stroke-linejoin="round" />
          <path
            d="M9.1875 21H32.8125"
            stroke="white"
            stroke-width="4"
            stroke-linecap="round"
            stroke-linejoin="round" />
        </svg>
      </span>
    </div>
  </div>
  <button
    type="submit"
    name="add"
    id="AddToCart"
    class="button">
    Add to Cart -
    <span class="current-price">{{ current_variant.price | money }}</span>
  </button>

  {{ form | payment_button }}
</form>