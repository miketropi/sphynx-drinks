{{ 'customer.css' | asset_url | stylesheet_tag }}

<div class="customer reset-password page-width">
  <h1 class="h2">{{ 'customer.reset_password.title' | t }}</h1>
  <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

  <form-state>
    {%- form 'reset_customer_password' -%}
      <div class="field">      
        <input
          required="required"
          class="required{% if form.errors contains 'password' %} invalid{% endif %}"
          type="password"
          name="customer[password]"
          id="password"
          autocomplete="new-password"
          {% if form.errors contains 'password' %}
            aria-invalid="true"
            aria-describedby="password-error"
          {% endif %}
          placeholder="{{ 'customer.reset_password.password' | t }}"
        >
        <label class="visually-hidden" for="password">{{ 'customer.reset_password.password' | t }}</label>
        {%- if form.errors contains 'password' -%}
          <small id="password-error" class="form__message">
            {% render 'icon', icon: 'error' %}
            {{ form.errors.translated_fields['password'] | capitalize }} {{ form.errors.messages['password'] }}
          </small>
        {%- endif -%}
      </div>
  
      <div class="field">      
        <input
          required="required"
          class="required{% if form.errors contains 'password_confirmation' %} invalid{% endif %}"
          type="password"
          name="customer[password_confirmation]"
          id="password_confirmation"
          autocomplete="new-password"
          {% if form.errors contains 'password_confirmation' %}
            aria-invalid="true"
            aria-describedby="password_confirmation-error"
          {% endif %}
          placeholder="{{ 'customer.reset_password.password_confirm' | t }}"
        >
        <label class="visually-hidden" for="password_confirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
        {%- if form.errors contains 'password_confirmation' -%}
          <small id="password_confirmation-error" class="form__message">
            {% render 'icon', icon: 'error' %}
            {{ form.errors.translated_fields['password_confirmation'] | capitalize }} {{ form.errors.messages['password_confirmation'] }}
          </small>
        {%- endif -%}
      </div>
  
      <button class="button" type="submit">{{ 'customer.reset_password.submit' | t }}</button>
    {%- endform -%}
  </form-state>
</div>
