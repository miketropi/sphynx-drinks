<footer class="site-footer site-footer__container">
  <div class="site-container">
    <div class="site-footer__inner">
      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          <div class="footer-col">
            {% case block.type %}
              {% when "membership-form" %}
              {%- render "membership-form", settings: block.settings -%}

              {% when "vertical-menu" %}
              {%- render "vertical-menu", settings: block.settings -%}

              {% when "footer-socials" %}
              {%- render "footer-socials", settings: block.settings -%}

              {% when "footer-brand-image" %}
              {%- render "footer-brand-image", settings: block.settings -%}
            {% endcase %}
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
  <div class="site-footer__copyright">
    {{ section.settings.copyright_text }}
  </div>
</footer>
<!-- .site-footer -->

{% schema %}
  {
    "name": "t:sections.footer.name",
    "blocks": [
      {
        "type": "vertical-menu",
        "name": "Menu",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "default": "Menu",
            "label": "t:sections.footer.blocks.link_list.settings.heading.label",
            "info": "t:sections.footer.blocks.link_list.settings.heading.info"
          }, {
            "type": "link_list",
            "id": "menu",
            "default": "footer",
            "label": "Menu"
          }
        ]
      }, {
        "type": "membership-form",
        "name": "Membership Register Form",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "default": "FIND YOUR FLAVOUR",
            "label": "Heading Text"
          }, {
            "type": "textarea",
            "id": "description",
            "default": "Apply for our free membership to receive exclusive deals, news, and events.",
            "label": "Description"
          }
        ]
      }, {
        "type": "footer-brand-image",
        "name": "Brand Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }, {
        "type": "footer-socials",
        "name": "Socials",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading Text"
          }, {
            "type": "text",
            "id": "instagram_url",
            "label": "Instagram URL"
          }, {
            "type": "text",
            "id": "facebook_url",
            "label": "Facebook URL"
          }
        ]
      }
    ],
    "settings": [
      {
        "type": "richtext",
        "id": "copyright_text",
        "label": "Copyright Text",
        "default": "<p>Â© 2022, Sphynx Drinks. All rights reserved. Privacy Policy  |  Terms and Conditions</p>"
      }
    ]
  }
{% endschema %}