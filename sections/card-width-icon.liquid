{{ 'section-card-w-icon.css' | asset_url | stylesheet_tag }}

<div class="card-with-icon-wrapper">
  <div class="page-width">
    {%- if section.settings.heading_card != blank -%}
      <h2 class="card-with-icon--heading">{{ section.settings.heading_card | escape }}</h2>
    {%- endif -%}

    {%- if section.settings.subheading_card != blank -%}
      <p class="card-with-icon--subheading">{{ section.settings.subheading_card | escape }}</p>
    {%- endif -%}

    <div class="card-with-icon-grid">
      {%- for block in section.blocks -%}
        <div class="card-with-icon__item">
          <div class="card-with-icon__item-icon">
            <img src="{{ block.settings.icon | image_url }}" alt="icon" />
          </div>
          <h4 class="">{{ block.settings.title | escape }}</h4>
          <div class="rte typeset">{{ block.settings.text }}</div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Card with icon",
    "tag": "section",
    "class": "section-card-w-icon",
    "settings": [
      {
        "type": "text",
        "id": "heading_card",
        "default": "The Sphynx Non-Alcoholic Beverages Guarantee",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "subheading_card",
        "default": "Non-alc drinks for cool cats",
        "label": "SubHeading"
      },
      {
        "type": "header",
        "content": "t:sections.all.mobile_layout.header.content"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.header.content"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "t:sections.all.padding.padding_top.unit",
        "label": "t:sections.all.padding.padding_top.label",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "t:sections.all.padding.padding_bottom.unit",
        "label": "t:sections.all.padding.padding_bottom.label",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "card_item",
        "name": "Card Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          }, {
            "type": "text",
            "id": "title",
            "default": "Card item heading",
            "label": "Heading"
          }, {
            "type": "richtext",
            "id": "text",
            "label": "Content",
            "default": "<p>Welcome to our store.</p>"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Card with icon",
        "blocks": [
          {
            "type": "card_item"
          }, {
            "type": "card_item"
          }
        ]
      }
    ]
  }
{% endschema %}