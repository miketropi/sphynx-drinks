{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="single-post-section section-{{ section.id }}-padding">
  <div class="single-post__decor-top">
    <svg viewBox="0 0 1920 150" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" clip-rule="evenodd" d="M0 58.2454H53C107 58.2454 213 58.2454 320 46.7262C427 35.2069 533 12.1684 640 16.1406C747 20.1127 853 50.3011 960 54.2733C1067 58.2454 1173 35.2069 1280 20.1127C1387 4.62132 1493 -2.92577 1600 1.04638C1707 4.62132 1813 20.1127 1867 27.6598L1920 35.2069V149.605H1867C1813 149.605 1707 149.605 1600 149.605C1493 149.605 1387 149.605 1280 149.605C1173 149.605 1067 149.605 960 149.605C853 149.605 747 149.605 640 149.605C533 149.605 427 149.605 320 149.605C213 149.605 107 149.605 53 149.605H0V58.2454Z" fill="white"/>
    </svg>      
  </div>
  <div class="single-post__container">
    <div class="single-post__wrap">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'post_content'-%}
          <div class="single-post__content">
            <article class="post-template">
    
              <div class="post-template__image">
                <img src="{{ article.image | image_url: width: 1100 }}" alt="{{ article.image.alt | escape }}">
              </div>
    
              <div class="post-template__category">{{ blog.title | link_to: blog.url, class: "link" }}</div>
    
              <h1 class="post-template__title" itemprop="headline">{{ article.title | escape }}</h1>
    
              <div class="post-template__content">{{ article.content }}</div>
    
              <div class="post-template__tag-share">
                <div class="post-template__tag">
                  {%- if blog.tags.size > 0 -%}
                    <ul class="list-tag">
                      {%- for tag in article.tags -%}
                        {%- liquid
                                    if tag contains "_"
                                        assign tag_starts_with = tag | slice: 0
                    
                                        if tag_starts_with == "_"
                                        if tag_count
                                            assign tag_count = tag_count | minus: 1 | at_least: 0
                                        endif
                    
                                        continue
                                        endif
                                    endif
                                -%}
                        <li class="item-tag">
                          <a href="/blogs/{{ blog.handle }}/tagged/{{ tag | handleize }}" class="link{% if current_tags contains tag %} is-selected{% endif %}">{{ tag }}</a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
                </div>
    
                <div class="post-template__share">
                  {% render 'social-sharing', share_title: article.title, share_permalink: article.url, share_image: article.image %}
                </div>
              </div>
            </article>
          </div>
          {%- when 'post_sidebar'-%}
          <div class="single-post__sidebar">
            {% render 'blog-sidebar'  %}
          </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "t:sections.main-article.name",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.header.content"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "t:sections.all.padding.padding_top.unit",
        "label": "t:sections.all.padding.padding_top.label",
        "default": 0
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "t:sections.all.padding.padding_bottom.unit",
        "label": "t:sections.all.padding.padding_bottom.label",
        "default": 80
      }
    ],
    "blocks": [
      {
        "type": "post_content",
        "name": "Post Content",
        "limit": 1
      },
      {
        "type": "post_sidebar",
        "name": "Post Sidebar",
        "limit": 1
      }
    ]
  }
{% endschema %}