{%- style -%}
    .section-hero-home .section-inner.section-{{ section.id }}{
      background-color: {{section.settings.bg_color}};
    }
{%- endstyle -%}
<div class="section-inner section-{{ section.id }} {{section.settings.custom_class}}">
  <div class="site-container">
    <div class="row">
      <div class="col col-content">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              {%- if block.settings.heading != blank -%}
                <h1
                  class="col-content--heading"
                  style="font-family: {{block.settings.font_family}}; font-size: {{block.settings.font_size}}px; color: {{block.settings.heading_color}}; font-weight: {{block.settings.font_weight}};"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.heading }}
                </h1>
              {%- endif -%}
            {%- when 'description' -%}
              {%- if block.settings.text != blank -%}
                <div
                  class="col-content--desc"
                  style="font-size: {{block.settings.font_size}}px; color: {{block.settings.heading_color}}; font-weight: {{block.settings.font_weight}};"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.text }}
                </div>
              {%- endif -%}
            {%- when 'button' -%}
              {%- if block.settings.btn_label != blank -%}
                <a
                  class="button col-content--button"
                  href="{{block.settings.button_link}}"
                  {{ block.shopify_attributes }}
                >
                  {{- block.settings.btn_label -}}
                  <span class="button-icon">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M5 12H19" stroke="white" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
                      <path d="M12 5L19 12L12 19" stroke="white" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg></span
                ></a>
              {%- endif -%}
          {%- endcase %}
        {%- endfor -%}
      </div>
      <div class="col col-media">
        {%- if section.settings.media != blank -%}
          <img src="{{section.settings.media | image_url}}" alt="media">
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

